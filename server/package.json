{
  "name": "foodies-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Express backend for Foodies application",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec \"npx tsx src/server.ts\"",
    "build": "tsc",
    "clean": "rimraf dist",
    "migrate": "npx tsx src/migrations/migrate.ts",
    "migrate:rollback": "npx tsx src/migrations/migrate.ts rollback",
    "test:twitter-auth": "npx tsx --env-file=.env src/examples/twitter-auth-demo.ts",
    "validate:twitter-token": "npx tsx --env-file=.env src/examples/validate-twitter-token.ts"
  }
}
